<androidx.preference.PreferenceScreen
        xmlns:app = "http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title = "@string/weather_settings">

        <ListPreference
                app:key = "units"
                app:title = "@string/units"
                app:entries = "@array/units_array_entries   "
                app:entryValues = "@array/units_array_values"
                app:defaultValue = "si"
                app:useSimpleSummaryProvider = "true"/>

        <ListPreference
                app:key = "w_language"
                app:title = "@string/weather_receiving_language"
                app:entries = "@array/w_lang_array_entries"
                app:entryValues = "@array/w_lang_array_values"
                app:defaultValue="ru"
                app:useSimpleSummaryProvider = "true"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>